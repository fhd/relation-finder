path-constant TOP : . ;

if [ modules.peek : DIST_DIR ]
{
	path-constant DIST_DIR : [ modules.peek : DIST_DIR ] ;
}
else
{
	path-constant DIST_DIR : $(TOP)/dist ;
}

project wbd
	: requirements <threading>multi
	               <include>/usr/include/soci
	               <include>/usr/include/postgresql
	: default-build release
	: build-dir bin
	;

alias all : wbd wbdc test ;

alias wbd : src ;
explicit wbd ;

alias wbdc : src/tools/wbdc ;
explicit wbdc ;
