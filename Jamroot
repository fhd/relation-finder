path-constant TOP : . ;

if [ modules.peek : DIST_DIR ]
{
	path-constant DIST_DIR : [ modules.peek : DIST_DIR ] ;
}
else
{
	path-constant DIST_DIR : $(TOP)/dist ;
}

project relation-finder
	: requirements <threading>multi
	: build-dir bin
	;

alias all : relation-finder tools test ;

alias relation-finder : src ;
explicit relation-finder ;
