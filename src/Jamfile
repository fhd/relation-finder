import testing ;

alias dist
	: dist-bin
	  dist-etc
	;

install dist-bin
	: relation-finder
	: <location>$(DIST_DIR)/bin
	;

install dist-etc
	: ../doc/relation-finder.cfg
	: <location>$(DIST_DIR)/etc
	;

exe relation-finder
	: main.cpp
	  options.cpp
	  util.cpp	  
	  fetcher.cpp
	  tcp_server.cpp
	  tcp_connection.cpp
	  searcher
	  boost_filesystem
	  boost_program_options
	  boost_thread
	  pqxx
	;

lib searcher
	: searcher.cpp
	: <link>static
	;

lib boost_filesystem ;
lib boost_program_options ;
lib boost_thread ;
lib pqxx ;
